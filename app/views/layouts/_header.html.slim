header.navbar.navbar-fixed-top.navbar-inverse
  .container
    = link_to "あにきゃぷ", captures_path, id: "logo"
    ul.nav.navbar-nav.navbar-right
      li
        = form_tag captures_path, method: :get, class: "form-inline navbar-form", style: "margin-top:10px; padding-right: 0;" do
          .form-group
            = text_field_tag :search, "", class: "form-control", placeholder: "タグで検索"
      li.dropdown
          a.dropdown-toggle href="#" data-toggle="dropdown"
            span.glyphicon.glyphicon-off aria-hidden="true" style="font-size: 20px;"
            b.caret style="height: 10px;"
          ul.dropdown-menu
            li = link_to "Upload", new_capture_path, class: "btn"
            li.divider
            li = link_to "アニメ一覧", animes_path, class: "btn"
            li = link_to "キャラ一覧", characters_path, class: "btn"
            li = link_to "制作一覧", studios_path, class: "btn"
